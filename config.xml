<?xml version='1.0' encoding='utf-8'?>
<widget xmlns="http://www.w3.org/ns/widgets" 
        xmlns:gap="http://phonegap.com/ns/1.0"
        id="com.pexeso.soc"
        versionCode = "6" 
        version="8.3.1">
    <name>Pexeso Memory Game</name>
    <description>
        Jednoduchá ukážka hry pexeso.
    </description>
    <author email="kamil.kafunek@yahoo.com" href="http://phonegap.com">
        Kamil Kafúnek
    </author> 
    <preference name="orientation" value="portrait" />
    <preference name="fullscreen" value="true" />
    <preference name="KeepRunning" value="false"/>
    
    
    <platform name="android"/>
    
    <gap:plugin nam="cordova plugin add https://github.com/apache/cordova-plugin-splashscreen.git" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
   
    
    <gap:splash gap:platform="android" gap:qualifier="port-mdpi" src="splash/android/splash screen320x480.png" />
    <gap:splash gap:platform="android" gap:qualifier="port-hdpi" src="splash/android/splash screen480x800.png" />
    <gap:splash gap:platform="android" gap:qualifier="port-xhdpi" src="splash/android/splash screen720x1280.png" />
    <gap:splash gap:platform="android" gap:qualifier="port-xxhdpi" src="splash/android/splashScreen960x1600.png" />
    <gap:splash gap:platform="android" gap:qualifier="port-xxxhdpi" src="splash/android/splashScreen1280x1920.png" />
    <gap:splash src="splash.png" />
    
    
    <icon src="icon.png" />
      
        <preference name="orientation" value="portrait" />
        <preference name="android-minSdkVersion" value="19" />
        <preference name="android-maxSdkVersion" value="23" />
        <preference name="android-targetSdkVersion" value="21" />
        
    
    
</widget>
